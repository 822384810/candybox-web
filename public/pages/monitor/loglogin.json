{
    "type": "page",
    "title": "登录日志",
    "body": [
        {
            "type": "crud",
            "name": "loginLogCrud",
            "autoGenerateFilter": true,
            "keepItemSelectionOnPageChange": true,
            "syncLocation": false,
            "api": {
                "method":"post",
                "url": "/api/core/cbdata/log_login/page?pageNo=${pageNo}&pageSize=${pageSize}",
                "data":{
                    "orderDesc": "loginTime",
                    "like-right-userName": "${userName}",
                    "like-right-loginTime": "${loginTime}"
                }
            },
            "perPage": 10,
            "pageField": "pageNo",
            "perPageField": "pageSize",
            "columnsTogglable": "auto",
            "mode": "table",
            "columns": [
                {
                    "name": "index",
                    "label": "序号",
                    "type": "text",
                    "align": "center",
                    "width": 60,
                    "text":"${(index+1)+(INT(pageNo)-1)*pageSize}"
                },
                {
                    "type": "text",
                    "label": "登录用户",
                    "name": "userName",
                    "align": "center",
                    "searchable": {
                        "type": "input-text",
                        "name": "userName",
                        "label": "操作员",
                        "placeholder": ""
                    }
                },
                {
                    "name": "deptName",
                    "label": "登录用户单位",
                    "type": "text",
                    "align": "center"
                },
                {
                    "name": "loginDev",
                    "label": "登录设备",
                    "type": "text",
                    "width": "260px",
                    "align": "center"
                },
                {
                    "name": "loginIp",
                    "label": "登录IP",
                    "type": "text",
                    "align": "center"
                },
                {
                    "name": "loginSource",
                    "label": "登录来源",
                    "type": "text",
                    "align": "center"
                },
                {
                    "type": "datetime",
                    "label": "登录时间",
                    "name": "loginTime",
                    "width": "150px",
                    "align": "center",
                    "searchable": {
                        "type": "input-date",
                        "name": "loginTime",
                        "label": "登录时间",
                        "value": "today",
                        "placeholder": "",
                        "format": "YYYY-MM-DD"
                    }
                }
            ]
        }
    ]
}