{
    "type": "page",
    "title": "Oauth认证",
    "body": [
        {
            "type": "crud",
            "name": "roleInfoCrud",
            "autoGenerateFilter": true,
            "keepItemSelectionOnPageChange": true,
            "syncLocation": false,
            "api": {
                "method":"post",
                "url": "/api/core/cbdata/oauth_client/page?pageNo=${pageNo}&pageSize=${pageSize}",
                "data":{
                    "status":"1",
                    "orderAsc": "createTime",
                    "like-right-name": "${name}",
                    "like-right-tag": "${tag}"
                }
            },
            "bulkActions": [
            ],
            "itemActions": [
            ],
            "features": [
                "create",
                "delete",
                "view",
                "update"
            ],
            "headerToolbar": [
                {
                    "label": "新增认证",
                    "type": "button",
                    "actionType": "dialog",
                    "level": "primary",
                    "dialog": {
                        "title": "新增",
                        "body": {
                            "type": "form",
                            "api": {
                                "method":"post",
                                "url":"/api/user/oauth"
                            },
                            "validateOnChange": true,
                            "body": [
                                {
                                    "type": "input-text",
                                    "name": "clientName",
                                    "label": "名称",
                                    "required": true,
                                    "validations": {
                                        "minLength": "1",
                                        "maxLength": "50"
                                    }
                                },
                                {
                                    "type": "input-text",
                                    "name": "scopes",
                                    "required": false,
                                    "label": "授权范围",
                                    "validations": {
                                        "maxLength": "200"
                                    },
                                    "placeholder": "多个用英文逗号分隔"
                            
                                }
                            ]
                        }
                    }
                },
                "bulkActions"
            ],
            "perPage": 10,
            "pageField": "pageNo",
            "perPageField": "pageSize",
            "columnsTogglable": "auto",
            "mode": "table",
            "columns": [
                {
                    "name": "index",
                    "label": "序号",
                    "type": "text",
                    "align": "center",
                    "width": 60,
                    "text":"${(index+1)+(INT(pageNo)-1)*pageSize}"
                    
                },
                {
                    "name": "clientName",
                    "label": "名称",
                    "type": "text",
                    "align": "center",
                    "toggled": true,
                    "searchable": {
                        "type": "input-text",
                        "name": "name",
                        "label": "名称",
                        "placeholder": ""
                    }
                },
                {
                    "type": "text",
                    "label": "client_id",
                    "name": "clientId",
                    "align": "center"
                },
                {
                    "type": "text",
                    "label": "client_secret",
                    "name": "clientSecret",
                    "align": "center"
                },
                {
                    "type": "text",
                    "label": "授权范围",
                    "name": "scopes",
                    "align": "center"
                },
                {
                    "type": "datetime",
                    "label": "创建时间",
                    "name": "createTime",
                    "align": "center"
                },
                {
                    "type": "operation",
                    "label": "操作",
                    "align": "center",
                    "width": 110,
                    "buttons": [
                        {
                            "type": "button",
                            "label": "删除",
                            "actionType": "ajax",
                            "level": "link",
                            "className": "text-danger",
                            "confirmText": "确定要删除？",
                            "api": "delete:/api/core/cbdata/oauth_client?id=$id"
                            
                        }
                    ]
                }
            ]
        }
    ]
}