{
    "type": "page",
    "title": "用户管理",
    "asideResizor": true,
    "asideMinWidth": 240,
    "asideMaxWidth": 600,
    "cssVars": {
        "--Page-aside-width": "18rem"
    },
    "body": [
        {
            "type": "crud",
            "name": "userInfoCrud",
            "autoGenerateFilter": true,
            "keepItemSelectionOnPageChange": true,
            "syncLocation": false,
            "api": {
                "method":"post",
                "url": "/user/api/user/user/page?page=${page}&perPage=${perPage}",
                "data":{
                    "deptId":"${deptTree.id}",
                    "status":"1",
                    "orderAsc": "createTime",
                    "like-right-name": "${name}",
                    "like-right-mobilePhone": "${mobilePhone}",
                    "like-right-idNumber": "${idNumber}"
                }
            },
            "bulkActions": [
            ],
            "itemActions": [
            ],
            "features": [
                "create",
                "delete",
                "view",
                "update"
            ],
            "headerToolbar": [
                {
                    "label": "新增用户",
                    "type": "button",
                    "actionType": "dialog",
                    "level": "primary",
                    "visibleOn": "this.deptTree",
                    "dialog": {
                        "title": "新增",
                        "body": {
                            "type": "form",
                            "api": {
                                "method":"post",
                                "url":"/user/api/user/user",
                                "data":{
                                    "name":"${name}",
                                    "nickName":"${nickName}",
                                    "mobilePhone":"${mobilePhone}",
                                    "mail":"${mail}",
                                    "idType":"${idType}",
                                    "idNumber":"${idNumber}",
                                    "password":"${password}",
                                    "deptId":"${deptTree.id}",
                                    "deptName":"${deptTree.name}"
                                }
                            },
                            "validateOnChange": true,
                            "body":[
                                {
                                    "type": "input-text",
                                    "name": "name",
                                    "label": "姓名",
                                    "required": true,
                                    "validations": {
                                        "minLength": "1",
                                        "maxLength": "50"
                                    }
                                },
                                {
                                    "type": "input-text",
                                    "name": "nickName",
                                    "required": false,
                                    "label": "登录名",
                                    "validations": {
                                        "maxLength": "50"
                                    }
                                },
                                {
                                    "type": "input-text",
                                    "name": "mobilePhone",
                                    "label": "手机号码",
                                    "required": true,
                                    "validations": {
                                        "maxLength": "11"
                                    }
                                },
                                {
                                    "type": "input-text",
                                    "name": "mail",
                                    "label": "电子邮箱",
                                    "required": false,
                                    "validations": {
                                        "isEmail": true
                                    }
                                },
                                {
                                    "label": "证件类型",
                                    "type": "select",
                                    "name": "idType",
                                    "required": false,
                                    "options": [
                                        {
                                            "label": "居民身份证",
                                            "value": "1"
                                        },
                                        {
                                            "label": "港澳台居民居住证",
                                            "value": "2"
                                        },
                                        {
                                            "label": "护照",
                                            "value": "3"
                                        },
                                        {
                                            "label": "士官证",
                                            "value": "4"
                                        }
                                    ]
                                },
                                {
                                    "type": "input-text",
                                    "name": "idNumber",
                                    "label": "证件号码",
                                    "required": false,
                                    "validations": {
                                        "minLength": "6",
                                        "maxLength": "30"
                                    }
                                },
                                {
                                    "type": "input-password",
                                    "name": "password",
                                    "label": "密码",
                                    "required": false,
                                    "validations": {
                                        "minLength": "6",
                                        "maxLength": "20"
                                    }
                                },
                                {
                                    "type": "hidden",
                                    "name": "status",
                                    "label": "数据状态",
                                    "required": false
                                },
                                {
                                    "type": "hidden",
                                    "name": "loginCount",
                                    "label": "登录次数",
                                    "required": false
                                }
                            ]
                        }
                    }
                },
                "bulkActions"
            ],
            "perPage": 10,
            "columnsTogglable": "auto",
            "mode": "table",
            "columns": [
                {
                    "name": "index",
                    "label": "序号",
                    "type": "text",
                    "align": "center",
                    "width": 60,
                    "text":"${(index+1)+(INT(page)-1)*perPage}"
                    
                },
                {
                    "name": "name",
                    "label": "姓名",
                    "type": "text",
                    "align": "center",
                    "toggled": true,
                    "searchable": {
                        "type": "input-text",
                        "name": "name",
                        "label": "姓名",
                        "placeholder": ""
                    }
                },
                {
                    "type": "text",
                    "label": "登录名",
                    "name": "nickName",
                    "align": "center"
                },
                {
                    "type": "text",
                    "label": "手机号码",
                    "name": "mobilePhone",
                    "align": "center",
                    "searchable": {
                        "type": "input-text",
                        "name": "mobilePhone",
                        "label": "手机号码",
                        "placeholder": ""
                    }
                },
                {
                    "name": "idType",
                    "label": "证件类型",
                    "type": "mapping",
                    "map": {
                        "1": "居民身份证",
                        "2": "港澳台居民居住证",
                        "3": "护照",
                        "4": "士官证"
                    },
                    "align": "center"
                },
                {
                    "type": "text",
                    "label": "证件号码",
                    "name": "idNumber",
                    "align": "center",
                    "searchable": {
                        "type": "input-text",
                        "name": "idNumber",
                        "label": "证件号码",
                        "placeholder": ""
                    }
                },
                {
                    "type": "datetime",
                    "label": "创建时间",
                    "name": "createTime",
                    "align": "center"
                },
                {
                    "type": "text",
                    "label": "登录次数",
                    "name": "loginCount",
                    "align": "center"
                },
                {
                    "type": "text",
                    "label": "单位名称",
                    "name": "deptName",
                    "align": "center"
                },
                {
                    "type": "operation",
                    "label": "操作",
                    "align": "center",
                    "width": 200,
                    "buttons": [
                        {
                            "type": "button",
                            "label": "删除",
                            "actionType": "ajax",
                            "level": "link",
                            "className": "text-danger",
                            "confirmText": "确定要删除？",
                            "api": "delete:/user/api/core/cbdata/user_user?id=$id"
                            
                        },
                        {
                            "label": "查看",
                            "type": "button",
                            "actionType": "dialog",
                            "level": "link",
                            "dialog": {
                                "title": "查看详情",
                                "body": {
                                    "type": "form",
                                    "body": [
                                        {
                                            "name": "name",
                                            "label": "姓名",
                                            "type": "static"
                                        },
                                        {
                                            "type": "static",
                                            "label": "登录名",
                                            "name": "nickName"
                                        },
                                        {
                                            "type": "static",
                                            "label": "手机号码",
                                            "name": "mobilePhone"
                                        },
                                        {
                                            "type": "control",
                                            "label": "证件类型",
                                            "name": "idType",
                                            "body": {
                                                "type": "mapping",
                                                "map": {
                                                    "1": "居民身份证",
                                                    "2": "港澳台居民居住证",
                                                    "3": "护照",
                                                    "4": "士官证"
                                                }
                                            }
                                        },
                                        {
                                            "type": "static",
                                            "label": "证据号码",
                                            "name": "idNumber"
                                           
                                        },
                                        {
                                            "type": "static-datetime",
                                            "label": "创建时间",
                                            "name": "createTime"
                                        },
                                        {
                                            "type": "static",
                                            "label": "登录次数",
                                            "name": "loginCount"
                                        }
                                    ]
                                }
                            }
                        },
                        {
                            "label": "编辑",
                            "type": "button",
                            "actionType": "dialog",
                            "level": "link",
                            "dialog": {
                                "title": "编辑",
                                "body": {
                                    "type": "form",
                                    "api": {
                                        "method":"put",
                                        "url":"/user/api/user/user?id=$id"
                                    },
                                    "validateOnChange": true,
                                    
                                    "body": [
                                        {
                                            "type": "input-text",
                                            "name": "name",
                                            "label": "姓名",
                                            "required": true,
                                            "validations": {
                                                "minLength": "1",
                                                "maxLength": "50"
                                            }
                                        },
                                        {
                                            "type": "input-text",
                                            "name": "nickName",
                                            "required": false,
                                            "label": "登录名",
                                            "validations": {
                                                "maxLength": "50"
                                            }
                                        },
                                        {
                                            "type": "input-text",
                                            "name": "mobilePhone",
                                            "label": "手机号码",
                                            "required": true,
                                            "validations": {
                                                "maxLength": "11"
                                            }
                                        },
                                        {
                                            "type": "input-text",
                                            "name": "mail",
                                            "label": "电子邮箱",
                                            "required": false,
                                            "validations": {
                                                "isEmail": true
                                            }
                                        },
                                        {
                                            "label": "证件类型",
                                            "type": "select",
                                            "name": "idType",
                                            "required": false,
                                            "options": [
                                                {
                                                    "label": "居民身份证",
                                                    "value": "1"
                                                },
                                                {
                                                    "label": "港澳台居民居住证",
                                                    "value": "2"
                                                },
                                                {
                                                    "label": "护照",
                                                    "value": "3"
                                                },
                                                {
                                                    "label": "士官证",
                                                    "value": "4"
                                                }
                                            ]
                                        },
                                        {
                                            "type": "input-text",
                                            "name": "idNumber",
                                            "label": "证件号码",
                                            "required": false,
                                            "validations": {
                                                "minLength": "6",
                                                "maxLength": "30"
                                            }
                                        },
                                        {
                                            "type": "input-password",
                                            "name": "password",
                                            "label": "密码",
                                            "required": false,
                                            "validations": {
                                                "minLength": "6",
                                                "maxLength": "20"
                                            }
                                        },
                                        {
                                            "type": "hidden",
                                            "name": "status",
                                            "label": "数据状态",
                                            "required": false
                                        },
                                        {
                                            "type": "hidden",
                                            "name": "loginCount",
                                            "label": "登录次数",
                                            "required": false
                                        }
                                    ]
                                }
                            }
                        },
                        {
                            "type": "button",
                            "label": "授予角色",
                            "level": "link",
                            "actionType": "dialog",
                            "dialog": {
                                "title": "授予角色",
                                "size": "lg",
                                "actions": [
                                {
                                "type": "button",
                                "actionType": "confirm",
                                "label": "关闭",
                                "primary": true
                                }
                                ],

                                "body": [
                                    {
                                        "type": "crud",
                                        "name": "roleInfoCrud",
                                        "autoGenerateFilter": true,
                                        "keepItemSelectionOnPageChange": true,
                                        "syncLocation": false,
                                        "api": {
                                            "method":"get",
                                            "url": "/user/api/user/role/relation/user/page?page=${page}&perPage=${perPage}&userId=${id}",
                                            "data":{
                                                "roleName": "${roleName}",
                                                "roleTag": "${roleTag}"
                                            }
                                        },                                        
                                        "perPage": 10,
                                        "columnsTogglable": "auto",
                                        "mode": "table",
                                        "columns": [
                                            {
              
                                                "name": "userRoleRelCheck",
                                                "label": "选择",
                                                "type": "checkbox",
                                                "className": "text-center",
                                                "width": 60,
                                                "onEvent": {
                                                    "change": {
                                                    "actions": [
                                                    {
                                                        "actionType": "ajax",
                                                        "args": {
                                                            "api": {
                                                                "url": "/user/api/user/role/relation",
                                                                "method": "post",
                                                                "data":{
                                                                    "userId": "${id}",
                                                                    "roleId": "${roleId}",
                                                                    "userRoleRelCheck": "${userRoleRelCheck}"
                                                                }
                                                            }
                                                        }
                                                    }
                                                    ]
                                                    }
                                                }
                                            },
                                           
                                            {
                                                "name": "index",
                                                "label": "序号",
                                                "type": "text",
                                                "className": "text-center",
                                                "width": 60,
                                                "text":"${(index+1)+(INT(page)-1)*perPge}"
                                                
                                            },
                                            {
                                                "name": "userId",
                                                "label": "userId",
                                                "text":"${id}",
                                                "type": "text",
                                                "hidden": true,
                                                "className": "text-center"                                             
                                            },
                                            {
                                                "name": "roleId",
                                                "label": "roleId",
                                                "type": "text",
                                                "hidden": true,
                                                "className": "text-center"                                            
                                            },
                                            {
                                                "name": "userRoleRelId",
                                                "label": "userRoleRelId",
                                                "type": "text",
                                                "hidden": true,
                                                "className": "text-center"                                             
                                            },
                                            {
                                                "name": "roleName",
                                                "label": "名称",
                                                "type": "text",
                                                "className": "text-center",
                                                "toggled": true,
                                                "searchable": {
                                                    "type": "input-text",
                                                    "name": "roleName",
                                                    "label": "名称",
                                                    "placeholder": ""
                                                }
                                            },

                                            {
                                                "type": "text",
                                                "label": "标签",
                                                "name": "roleTag",
                                                "className": "text-center",
                                                "searchable": {
                                                    "type": "input-text",
                                                    "name": "roleTag",
                                                    "label": "标签",
                                                    "placeholder": ""
                                                }
                                            },
                                            {
                                                "type": "datetime",
                                                "label": "授予时间",
                                                "name": "userRoleRelCreateTime",
                                                "className": "text-center"
                                            }

                                        ]
                                    }
                                ]
                            }
                        }
                    ]
                }
            ]
        }
    ],
    "aside": 
    {
        "type": "form",
        "wrapWithPanel": false,
        "target": "userInfoCrud",
        "name":"deptAside",
        "className": "asideClass text-md h-full",
        "body": [
        {
            "type": "wrapper",
            "body": "组织机构",
            "className": "text-lg"
        },
        {
            "type": "input-tree",
            "debug": true,
            "level": "debug",
            "name": "deptTree",
            "inputClassName": "no-border h-full",
            "rootCreateTip": "增加一级组织机构",
            "labelField": "name",
            "creatable": true,
            "removable": true,
            "editable": true,
            "initiallyOpen": true,
            "submitOnChange": true,
            "className": "h-full",
            "addControls": [
                {
                    "type": "input-text",
                    "name": "name",
                    "label": "单位名称",
                    "required": true,
                    "validations": {
                        "minLength": "1",
                        "maxLength": "100"
                    }
                },
                {
                    "type": "input-text",
                    "name": "shortName",
                    "required": false,
                    "label": "单位简称",
                    "validations": {
                        "maxLength": "100"
                    }
                },
                {
                    "type": "hidden",
                    "name": "parentId",
                    "label": "父id"
                }
            ],
            "editControls": [
                {
                    "type": "input-text",
                    "name": "name",
                    "label": "单位名称",
                    "required": true,
                    "validations": {
                        "minLength": "1",
                        "maxLength": "100"
                    }
                },
                {
                    "type": "input-text",
                    "name": "shortName",
                    "required": false,
                    "label": "单位简称",
                    "validations": {
                        "maxLength": "100"
                    }
                },
                {
                    "type": "hidden",
                    "name": "parentId",
                    "label": "父id"
                }
            ],
            "addApi":{ 
                "method": "POST",
                "url": "/user/api/core/cbdata/user_dept",
                "data": {
                    "name": "${name}",
                    "shortName": "${shortName}",
                    "parentId":"${IF(ISEMPTY(${parent.id}), 0, ${parent.id})}"
                }
            },
            "editApi": 
            { 
                "method": "PUT",
                "url": "/user/api/user/dept?id=${id}",
                "data": {
                    "name": "${name}",
                    "shortName": "${shortName}",
                    "status": "1"
                }
            },
            "deleteApi": "delete:/user/api/core/cbdata/user_dept?id=${id}",
            "source": "get:/user/api/user/dept/tree?parentId=${id}"
        }]
    }
}