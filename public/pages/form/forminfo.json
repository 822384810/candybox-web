{
  "type": "page",
  "title": "表单管理",
  "body": [
    {
      "type": "crud",
      "syncLocation": false,
      "autoGenerateFilter": true,
      "columnsTogglable": "auto",
      "api": {
        "method": "post",
        "url": "/form/api/core/cbdata/form_info/user/page",
        "data":{
          "status":"1",
          "orderDesc": "createTime",
          "like-right-name": "${name}",
          "like-right-code": "${code}",
          "page": "${page}",
          "perPage":"${perPage}"
      }
      },
      "columns": [
        {
          "name": "index",
          "label": "序号",
          "type": "text",
          "align": "center",
          "width": 60,
          "text": "${(index+1)+(INT(page)-1)*perPage}"
        },
        {
          "name": "id",
          "label": "表单ID",
          "type": "text",
          "align": "center",
          "copyable": true
        },
        {
          "name": "name",
          "label": "名称",
          "align": "center",
          "type": "text",
          "searchable": {
            "type": "input-text",
            "name": "name",
            "label": "名称",
            "placeholder": ""
        }
        },
        {
          "type": "text",
          "label": "编码",
          "align": "center",
          "name": "code",
          "searchable": {
            "type": "input-text",
            "name": "code",
            "label": "编码",
            "placeholder": ""
        }
        },
        {
          "type": "text",
          "label": "定义",
          "align": "center",
          "toggled": false,
          "name": "formJson"
        },
        {
          "type": "text",
          "label": "描述",
          "align": "center",
          "name": "descript"
        },
        {
          "type": "datetime",
          "label": "创建日期",
          "align": "center",
          "name": "createTime",
          "placeholder": "-",
          "width": 170
        },
        {
          "type": "operation",
          "label": "操作",
          "align": "center",
          "buttons": [
            {
              "type": "button",
              "label": "删除",
              "actionType": "ajax",
              "level": "link",
              "className": "text-danger",
              "confirmText": "确定要删除？",
              "api": "delete:/form/api/core/cbdata/form_info/user?id=$id"
            },
            {
              "type": "button",
              "label": "预览",
              "actionType": "drawer",
              "level": "link",
              "drawer": {
                "position": "right",
                "title": "预览",
                "resizable": true,
                "size": "xl",
                "closeOnEsc": true,
                "closeOnOutside": false,
                "showCloseButton": true,
                "actions": [
                  {
                    "type": "button",
                    "label": "关闭",
                    "level": "primary",
                    "actionType": "close"
                  }
                ],
                "body": [
                  {
                    "type": "service",
                    "className": "m-t",
                    "schemaApi": "get:/form/api/form/info/user/id?id=${id}"
                  }
                ]
              }
            },
            {
              "label": "编辑",
              "type": "button",
              "actionType": "dialog",
              "level": "link",
              "dialog": {
                "title": "编辑",
                "body": [
                  {
                    "type": "form",
                    "api": "put:/form/api/core/cbdata/form_info/user?id=$id",
                    "body": [
                      {
                        "type": "group",
                        "body": [
                          {
                            "type": "input-text",
                            "name": "name",
                            "label": "名称",
                            "mode": "horizontal",
                            "horizontal": {
                              "leftFixed": "normal",
                              "left": 2,
                              "right": 10
                            },
                            "size": "",
                            "required": true,
                            "validations": {
                              "maxLength": 100
                            }
                          },
                          {
                            "type": "input-text",
                            "name": "code",
                            "label": "编码",
                            "mode": "horizontal",
                            "horizontal": {
                              "leftFixed": "normal",
                              "left": 6,
                              "right": 6
                            },
                            "required": true,
                            "validations": {
                              "maxLength": 50,
                              "isAlphanumeric": true
                            }
                          }
                        ]
                      },
                      {
                        "name": "formJson",
                        "label": "定义",
                        "type": "textarea",
                        "minRows": "15",
                        "language": "json",
                        "required": true
                      },
                      {
                        "label": "描述",
                        "name": "descript",
                        "type": "textarea",
                        "validations": {
                          "maxLength": 200
                        }
                      }
                    ]
                  }
                ],
                "type": "dialog",
                "closeOnEsc": false,
                "closeOnOutside": false,
                "showCloseButton": true,
                "size": "xl"
              }
            }
          ],
          "placeholder": "-",
          "width": 110,
          "fixed": ""
        }
      ],
      "bulkActions": [
      ],
      "itemActions": [
      ],
      "features": [
        "delete",
        "view",
        "update",
        "create",
        "filter"
